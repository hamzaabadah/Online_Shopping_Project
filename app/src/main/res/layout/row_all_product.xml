<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        >

        <ImageView
            android:id="@+id/row_all_product_image_view"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_margin="@dimen/_10sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/row_all_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Of Product"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/row_all_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price Of Product"
                android:layout_marginTop="@dimen/_5sdp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/row_all_product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Of Product"
                android:layout_marginTop="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/row_all_product_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name Of Product"
                android:layout_marginTop="@dimen/_5sdp"/>
        </LinearLayout>

    </LinearLayout>






</androidx.cardview.widget.CardView>